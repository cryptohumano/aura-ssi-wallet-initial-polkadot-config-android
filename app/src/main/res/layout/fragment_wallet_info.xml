<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔑 Información de la Wallet"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Detalles completos de tu wallet criptográfica"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- No Wallet Message -->
        <LinearLayout
            android:id="@+id/containerNoWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❌"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay wallet actual"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crea una nueva wallet para ver su información"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center" />

        </LinearLayout>

        <!-- Wallet Info Container -->
        <LinearLayout
            android:id="@+id/containerWalletInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Basic Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📋 Información Básica"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/textWalletName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre de la Wallet"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/textWalletId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: wallet_1234567890"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/textCryptoType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo: SR25519"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/textDerivationPath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ruta: //0"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/textCreatedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creado: 20/09/2024 00:00:00"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Mnemonic Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🔐 Mnemonic (12 palabras)"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyMnemonic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copiar"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                    <!-- Mnemonic Formatted -->
                    <TextView
                        android:id="@+id/textMnemonicFormatted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1. palabra1\n2. palabra2\n3. palabra3\n..."
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:background="@android:color/black"
                        android:textColor="@android:color/white"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Mnemonic Single Line -->
                    <TextView
                        android:id="@+id/textMnemonicSingleLine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="palabra1 palabra2 palabra3 ..."
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Public Key Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="🔑 Clave Pública"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyPublicKey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copiar"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textPublicKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="46ebddef8cd9bb167dc30878d7113b7e168e6f0646beffd77d69d39bad76b47a"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Address Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="📍 Dirección"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copiar"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5DfhGyQdFobKM8NsWvEeAKk5EQQgYe9AydgJ7rMB6E1EqRzV"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@android:color/white"
                        android:textColor="@android:color/black"
                        android:padding="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- SS58 Parachain Addresses Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🌐 Direcciones de Parachains"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genera direcciones SS58 para diferentes parachains usando tu clave pública"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="8dp" />

                    <!-- Parachain Addresses Info -->
                    <TextView
                        android:id="@+id/textParachainInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No hay direcciones de parachains disponibles"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:background="@android:color/white"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="monospace" />

                    <!-- Parachain Buttons Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <!-- Row 1: Main Networks -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnGeneratePolkadotAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                android:text="Polkadot"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnGenerateKusamaAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:text="Kusama"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                        </LinearLayout>

                        <!-- Row 2: Parachains -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnGenerateKiltAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                android:text="KILT"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnGenerateAllAddresses"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                android:text="Todas"
                                android:textSize="12sp"
                                style="@style/Widget.Material3.Button" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Refresh Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔄 Actualizar Información"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
