<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- T铆tulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Firma Criptogr谩fica"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Secci贸n: Firma de Mensajes -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Firmar Mensaje"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Mensaje -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mensaje a firmar"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Algoritmo -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Algoritmo:"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerAlgorithm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <!-- Red -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Red:"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerNetwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Botones de firma -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSignMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Firmar"
                        app:icon="@drawable/ic_sign"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVerifySignature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Verificar"
                        app:icon="@drawable/ic_verify"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

                <!-- Resultado de firma -->
                <TextView
                    android:id="@+id/textViewSignatureResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resultado de la firma aparecer谩 aqu铆..."
                    android:textSize="12sp"
                    android:background="@drawable/bg_result_text"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Secci贸n: Transacciones -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Transacciones"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Direcci贸n origen -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextFromAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Direcci贸n origen" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Direcci贸n destino -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextToAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Direcci贸n destino" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Cantidad -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cantidad (opcional)"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Red para transacci贸n -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Red:"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/spinnerTransactionNetwork"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- Bot贸n simular transacci贸n -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSimulateTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Simular Transacci贸n"
                    app:icon="@drawable/ic_simulate"
                    app:iconGravity="textStart" />

                <!-- Resultado de transacci贸n -->
                <TextView
                    android:id="@+id/textViewTransactionResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resultado de la transacci贸n aparecer谩 aqu铆..."
                    android:textSize="12sp"
                    android:background="@drawable/bg_result_text"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Secci贸n: Consultas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Consultas"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Direcci贸n para balance -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextBalanceAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Direcci贸n para consultar balance" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bot贸n obtener balance -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGetBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Obtener Balance"
                    app:icon="@drawable/ic_balance"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Resultado de balance -->
                <TextView
                    android:id="@+id/textViewBalanceResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance aparecer谩 aqu铆..."
                    android:textSize="12sp"
                    android:background="@drawable/bg_result_text"
                    android:padding="12dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Secci贸n: Conexiones -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Conexiones"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Bot贸n conectar redes -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConnectNetworks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Conectar Todas las Redes"
                    app:icon="@drawable/ic_network"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
